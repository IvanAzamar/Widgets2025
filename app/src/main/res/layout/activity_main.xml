<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/Card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginHorizontal="8dp">
        <ImageView
            android:id="@+id/imgCard"
            android:layout_width="88dp"
            android:layout_height="88dp"
            android:src="@drawable/tenmx"
            android:background="#002FFF"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
          />
        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="CARD VIEW"
            android:layout_marginLeft="16dp"
            android:textAppearance="?attr/textAppearanceHeadlineSmall"
            app:layout_constraintStart_toEndOf="@+id/imgCard"
            app:layout_constraintTop_toTopOf="@id/imgCard"
            app:layout_constraintEnd_toEndOf="parent"
            />

            <TextView
                android:id="@+id/tvMessage"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="CardView es una clase del paquete androidx.cardview.widget que extiende de FrameLayout y se utiliza para agrupar elementos de interfaz (views) dentro de un contenedor con un estilo de tarjeta."
            android:textAppearance="?attr/textAppearanceBodySmall"
            android:maxLines="5"
            android:ellipsize="end"
                android:layout_marginLeft="12dp"
                app:layout_constraintStart_toStartOf="@id/tvTitle"
                app:layout_constraintEnd_toEndOf="@id/tvTitle"
                app:layout_constraintTop_toBottomOf="@id/tvTitle"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnBuy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="BUY"
                app:icon="@drawable/baseline_point_of_sale_24"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvMessage"/>
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnSkip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Skip"
                style="@style/Widget.Material3.Button.TextButton"
                app:layout_constraintTop_toTopOf="@id/btnBuy"
               app:layout_constraintEnd_toStartOf="@id/btnBuy"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:background="@color/black">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <ImageView
                android:id="@+id/imgUrl"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginTop="8dp"
                android:background="#5BBF8A" />

            <TextView
                android:id="@+id/tvTitlealt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="BUEN FIN!"
                android:textAppearance="?attr/textAppearanceHeadlineSmall"
                android:layout_marginTop="8dp"
                android:gravity="center" />

            <com.google.android.material.button.MaterialButtonToggleGroup
                android:id="@+id/Grupo1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="16dp"
                app:singleSelection="true">

                <Button
                    android:id="@+id/btnGroupA"
                    style="?attr/materialButtonOutlinedStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="RED" />

                <Button
                    android:id="@+id/btnGroupB"
                    style="?attr/materialButtonOutlinedStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="GREEN" />

                <Button
                    android:id="@+id/btnGroupC"
                    style="?attr/materialButtonOutlinedStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="BLUE" />
            </com.google.android.material.button.MaterialButtonToggleGroup>

        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>
    <com.google.android.material.divider.MaterialDivider
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:background="@color/black"/>
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        app:helperText="Requerido"
        app:endIconMode="clear_text">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/emailTv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/email"
            android:inputType="textEmailAddress" />
    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        app:helperText="imÃ¡gen"
        app:endIconMode="clear_text">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/EtUrl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/url"
            android:inputType="textEmailAddress" />
        <com.google.android.material.chip.Chip
            android:id="@+id/ChipURL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="https://huimanguillo.tecnm.mx/wp-content/uploads/2021/05/WhatsApp-Image-2021-04-20-at-1.00.16-PM-e1737412695280.jpeg"
            android:checkable="true"
            app:closeIconEnabled="true"/>
   </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.slider.Slider
        android:id="@+id/Slider1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:valueFrom="0"
        android:valueTo="10"
        android:value="5"
        android:stepSize="1"/>
</LinearLayout>
</ScrollView>